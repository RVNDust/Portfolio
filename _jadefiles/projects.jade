mixin box(thumbnails, project_title, project_tech, project_desc)
  li(style="background-image: url('#{thumbnails}');").box
    .project-meta
      .title #{project_title}
      .technology #{project_tech}
      .description #{project_desc}
      
mixin emptybox(thumbnails)
  li(style="background-image: url('#{thumbnails}');").box-empty

